        <servlet-name>activity</servlet-name>
        <servlet-class>com.atsamour.habitatweave.controller.ActivityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>options</servlet-name>
        <servlet-class>com.atsamour.habitatweave.controller.OptionsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AutoCompleteResponce</servlet-name>
        <servlet-class>com.atsamour.habitatweave.controller.AutoCompleteResponce</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>currentcost</servlet-name>
        <url-pattern>/currentcost</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>homecreate</servlet-name>
        <servlet-class>com.atsamour.habitatweave.controller.HomeCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homecreate</servlet-name>
        <url-pattern>/homecreate</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>plugwise</servlet-name>
        <servlet-class>com.atsamour.habitatweave.controller.PlugWiseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>plugwise</servlet-name>
        <url-pattern>/plugwise</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>schedules</servlet-name>
        <servlet-class>com.atsamour.habitatweave.controller.SchedulesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>schedules</servlet-name>
        <url-pattern>/schedules</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>arrangerooms</servlet-name>
        <servlet-class>com.atsamour.habitatweave.controller.ArrangeRoomsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>arrangerooms</servlet-name>
        <url-pattern>/arrangerooms</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>switchplugs</servlet-name>
        <servlet-class>com.atsamour.habitatweave.controller.SwitchPlugsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>switchplugs</servlet-name>
        <url-pattern>/switchplugs</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.atsamour.habitatweave.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <jsp-file>/logout.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>index</servlet-name>
         <servlet-class>com.atsamour.habitatweave.controller.IndexServlet</servlet-class>
