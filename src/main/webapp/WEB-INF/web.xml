        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sleep</servlet-name>
        <url-pattern>/sleep</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>activity</servlet-name>
        <url-pattern>/activity</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>options</servlet-name>
        <url-pattern>/options</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AutoCompleteResponce</servlet-name>
        <url-pattern>/AutoCompleteResponce</url-pattern>
    </servlet-mapping>
</web-app>
